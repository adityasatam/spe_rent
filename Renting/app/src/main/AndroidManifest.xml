<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.renting">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission-sdk-23 android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Renting"
        android:usesCleartextTraffic="true">
        <activity android:name=".NotificationActivity"></activity>
        <activity android:name=".MyAdsActivity" />
        <activity android:name=".AddFundsActivity" />
        <activity android:name=".ViewProductAcitvity" />
        <activity android:name=".MenuActivity" />
        <activity
            android:name=".ImageUpload"
            android:label="@string/title_activity_image_upload"
            android:theme="@style/Theme.Renting.NoActionBar" />
        <activity android:name=".AddProduct" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".SignUpActivity" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>